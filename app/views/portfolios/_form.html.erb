<%= form_with model: portfolio do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.label :main_image %>
    <%= form.text_area :main_image, value:"https://via.placeholder.com/600x400" %>
  </div>
  <div>
    <%= form.label :thumb_image %>
    <%= form.text_area :thumb_image, value:"https://via.placeholder.com/300x200" %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>